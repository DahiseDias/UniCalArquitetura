@startuml
!include https://raw.githubusercontent.com/adrianvlupu/C4-PlantUML/latest/C4_Container.puml

LAYOUT_WITH_LEGEND()

Container(api, "API", "Java(SpringBoot)", "Provides The Events functionality via JSON/HTTPS")
System_Ext(gAuth, "Google Authentication API", "API to authenticate user login and/or subscription")
Container_Boundary(mobileApp, "Mobile App"){
    Container(appContext, "App Context", "Component: Context API", "Responsible for manage, centralize and share all the services between the screens.     It is also responsible for the application initialization, comunicate with google authentication API, store user state, fill the event calendar and call services to update data.")
    Container(courseService, "Course Service", "Component: NodeJS HTTP Client", "Connects to API to get courses information")
    Container(eventService, "Event Service", "Component: NodeJS HTTP Client", "Connects to API and manages events information (CRUD)")
    Container(NotificationService, "Notification Service", "Component: NodeJS HTTP Client", "Connects to API to get notifications information")
    Container(userService, "User Service", "Component: NodeJS HTTP Client", "Connects to API sending and retrivieng user information")

    Container(screens, "Screens", "Component: React Native JSX Views", "Contains the application screens")
    Container(components, "Components", "Component: React Native JSX", "Contains components that compose screens")

    Rel(appContext, eventService, "Uses")
    Rel(appContext, courseService, "Uses")
    Rel(appContext, NotificationService, "Uses")
    Rel(appContext, userService, "Uses")
    Rel(screens, components, "Uses")
    Rel(screens, appContext, "Uses")

    Rel(courseService, api, "Makes API calls to", "JSON/HTTP")
    Rel(eventService, api, "Makes API calls to", "JSON/HTTP")
    Rel(NotificationService, api, "Makes API calls to", "JSON/HTTP")
    Rel(userService, api, "Makes API calls to", "JSON/HTTP")
    Rel(appContext, gAuth, "Uses")

}


@enduml